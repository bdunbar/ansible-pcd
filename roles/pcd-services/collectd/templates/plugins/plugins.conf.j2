    MountPoint "/"
    MountPoint "/backups/cloud"
    IgnoreSelected false
    ReportInodes false
</Plugin>

<Plugin "interface">
  Interface "lo"
  IgnoreSelected true
</Plugin>

<Plugin "syslog">
    LogLevel "info" # debug|info|notice|warning|err
</Plugin>

<Plugin "swap">
    ReportByDevice false
    ReportBytes true
</Plugin>


