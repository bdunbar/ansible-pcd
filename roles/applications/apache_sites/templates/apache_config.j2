{% for branch in item.branches %}
<VirtualHost *:80>
        ServerName {% if branch == "master" %}{{ item.name }}{% else %}{{ branch }}.{{ item.name | replace("www.","",1) }}{% endif %}
        
        DocumentRoot {{ item.dir }}/{{ branch }}/{{ item.docroot }}
        <Directory {{ item.dir }}/{{ branch }}/{{ item.docroot }}>
                Options FollowSymLinks
                AllowOverride None
        </Directory>
</VirtualHost>

{% endfor %}